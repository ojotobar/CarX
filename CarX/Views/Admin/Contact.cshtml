@model IEnumerable<CarX.Models.Contact>


    <section class="contact py-5">
        <div class="container">
            <h1 class="text-center pb-5">Contacts</h1>

            <div class="row text-right pb-3">
                <a asp-controller="Admin" asp-action="AddContact" class="btn btn-primary">
                    <i class="fas fa-plus"></i> &nbsp; Add Contact
                </a>
            </div>

            @if (Model.Count() > 0)
            {
                <div class="row py-5">
                    <div class="col-lg-12 mx-auto">

                        @foreach (var contact in Model)
                        {
                        <div class="row text-center border pt-2">
                            <div class="col-lg-4">
                                <div class="circle">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <h5>Address</h5>
                                <p>@contact.Address</p>
                            </div>

                            <div class="col-lg-4">
                                <div class="circle">
                                    <a href="mailto:@contact.Email" class="text-dark" style="text-decoration:none;"><i class="fas fa-envelope"></i></a>
                                </div>
                                <h5>Email</h5>
                                <p>@contact.Email</p>
                            </div>

                            <div class="col-lg-4">
                                <div class="circle">
                                    <a href="tel:@contact.Phone" class="text-dark" style="text-decoration:none;"><i class="fas fa-phone"></i></a>
                                </div>
                                <h5>Phone</h5>
                                <p>@contact.Phone</p>
                            </div>

                            <div class="btn-group m-3" role="group">
                                <a asp-controller="Admin" asp-route-Id="@contact.Id" asp-action="EditContact" class="btn btn-primary mx-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Admin" asp-route-Id="@contact.Id" asp-action="DeleteContact" class="btn btn-danger mx-1">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </div>
                      }
                           
                        </div>
                </div>
            }
            else
            {
                <p class="text-center">Nothing to show</p>
            }
        </div>
       </section>