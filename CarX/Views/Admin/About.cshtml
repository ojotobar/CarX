@model List<CarX.Models.About>

<div class="container">
    <div class="border p-3">
        <div class="row">
            <h2 class="text-info pl-3">About Us</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Admin" asp-action="AddAbout" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Add About
            </a>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                
                <div class="row d-flex justify-content-center border m-3">
                    <div class="col-md-4" style="max-height: 200px; max-width: 200px;">
                        <img src="@Model[0].ImgUrl" class="img-thumbnail img-fluid" style="height:200px;width:200px;" alt="About Picture">
                    </div>
                    <div class="col-md-6">
                        <div class="col border font-weight-bold">@Model[0].Title</div>
                        <div class="col">@Model[0].Details</div>
                    </div>
                    <div class="col-md-2 border">
                        <div class="w-75 btn-group m-2" role="group">
                            <a asp-controller="Admin" asp-route-Id="@Model[0].Id" asp-action="EditAbout" class="btn btn-primary mx-1">
                                <i class="fas fa-edit"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

