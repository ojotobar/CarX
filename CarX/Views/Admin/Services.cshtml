@model IEnumerable<CarX.Models.Service>;



<section class="fa-services py-5 bg-light">
    <div class="col-6 text-right">
        <a asp-controller="Admin" asp-action="AddService" class="btn btn-primary">
            <i class="fas fa-plus"></i> &nbsp; Add Service
        </a>
    </div>
    <div class="container py-5">
        <h1 class="text-center pb-5">Services</h1>
        <div class="row pb-3 d-flex justify-content-center">

            @if (Model.Count() > 0)
            {
                foreach (var service in Model)
                {
                    <div class="col-lg-4 mb-3">
                        <div class="card text-center py-3">
                            <div class="card-body">
                                <div class="circle">
                                    <span><i class="fas fa-cogs"></i></span>
                                </div>
                                <h4 class="font-weight-bold pb-2">@service.Title</h4>
                                <p>@service.Details</p>
                            </div>

                            <div class="col-md-2">
                                <div class="w-75 btn-group m-2" role="group">
                                    <a asp-controller="Admin" asp-route-Id="@service.Id" asp-action="EditService" class="btn btn-primary mx-1">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-controller="Admin" asp-route-Id="@service.Id" asp-action="DeleteService" class="btn btn-danger mx-1">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No services record found.</p>
            }
        </div>
    </div>
</section>

