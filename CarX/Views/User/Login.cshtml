@model CarX.Data.Dto.LoginDto

<form method="post" asp-action="Login">
    <div class="border p-3">
        @{
            if (ViewBag.HasErrors != null && ViewBag.HasErrors)
            {
                <div class="text-danger">@ViewBag.Error</div>
            }
        }
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Login</h2>
        </div>
        <div class="row">
            <div class="col-md-3">
                @* Keep empty *@
            </div>
            <div class="col-md-6">
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="Password"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                        <div class="form-check">
                            <label class="form-check-label pr-5" for="flexCheckChecked">
                                Remember Me
                            </label>
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="flexCheckChecked" checked>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6 mb-1">
                        <input type="submit" name="submit" value="Login" class="btn btn-info w-100" />
                    </div>
                    <div class="col-md-6 mb-1">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i>Back</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                @* Keep empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

