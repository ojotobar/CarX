@model CarX.Data.Dto.UpdatePhotoDto

<form method="post" asp-action="ChangeImage" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        @{
            if (ViewBag.HasErrors != null && ViewBag.HasErrors)
            {
                <div class="text-danger">@ViewBag.Error</div>
            }
            else
            {
                <div class="text-success">@ViewBag.Success</div>
            }
        }
        <div class="form-group row">
            <h2 class="text-info pl-3">Sign Up</h2>
        </div>
        <div class="row">
            <div class="col-md-3">
                @* Keep empty *@
            </div>
            <div class="col-md-6">
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="Photo"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="Photo" class="form-control" />
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-6 mb-1">
                        <input type="submit" name="submit" value="Upload" class="btn btn-info w-100" />
                    </div>
                    <div class="col-md-6 mb-1">
                        <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i>Back</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                @* Keep empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
